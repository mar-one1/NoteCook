<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_schedule_black_24dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/vl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                tools:layout_editor_absoluteY="18dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Clock"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_playlist_add_check_black_24dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/val_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/ic_local_fire_department_black_24dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/val_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                tools:layout_editor_absoluteY="18dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Cal"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>